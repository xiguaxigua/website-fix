{
  "manifest_version": 2,
  "name": "website-fixer",
  "version": "1.0.2",
  "description": "网站修复",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [{
    "matches": ["http://*/*"],
    "js": ["inject.js"],
    "all_frames": true,
    "run_at": "document_start"
  }],
  "web_accessible_resources": [
    "js/main.js", "css/main.css"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "选课助手"
  }
}
